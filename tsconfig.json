{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "rootDir": "./",
        "outDir": "./dist",
        "strict": true,
        "allowJs": false,
        "declarationMap": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "*.config.*", "src/**/*.spec.ts"]
}
